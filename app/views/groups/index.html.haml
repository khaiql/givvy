%p#notice= notice

.container
  .row
    .col
      %h1 Groups
    .col.text-right
      = link_to new_group_path do
        .btn.btn-primary New Group

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Tags
      %th Slack channel
      %th Default
      %th{:colspan => "3"}
  %tbody
    - @groups.each do |group|
      %tr
        %td= group.name
        %td= group.tags
        %td= group.slack_channel
        %td= group.default
        %td= link_to 'Show', group
        %td= link_to 'Edit', edit_group_path(group)
        %td= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' }

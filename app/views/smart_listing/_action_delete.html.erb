<%# 
  Delete action.

  Available local variables:
    action_if:          false if action is disabled
    url:                destroy url
    icon:               icon css classes
    confirmation:       confirmation text
    alternatives:       text in yes/no buttons
    title
-%>

<%= link_to_if(action_if, content_tag(:i, "", :class => icon), url, :remote => true, :class => "destroy",
               :method => :delete, :title => title || t("smart_listing.actions.destroy"), :data => {:confirmation => confirmation || t("smart_listing.msgs.destroy_confirmation"),
                :yes => alternatives&.dig(:yes) || t('smart_listing.actions.yes'), :no => alternatives&.dig(:no) || t('smart_listing.actions.no')} ) %>
